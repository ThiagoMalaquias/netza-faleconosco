<%= form_for(@bate_papo, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @bate_papo.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os erros abaixo</h4>

      <ul>
      <% @bate_papo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :usuario, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :usuario, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mensagem, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :mensagem, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
