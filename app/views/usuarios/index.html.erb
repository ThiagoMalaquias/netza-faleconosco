<div class="page-header">
  <%= link_to new_usuario_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Usuario
  <% end %>
  <h1>Listando usuarios</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>CPF</th>
        <th>Email</th>
        <th>Telefone</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @usuarios) do |usuario| %>
        <td><%= usuario.nome %></td>
        <td><%= usuario.cpf %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.telefone %></td>
            <td><%= link_to 'Mostrar', usuario %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Apagar', usuario, method: :delete, data: { confirm: 'Tem certeza ?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
